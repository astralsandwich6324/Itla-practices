    public List<Perfil> Creadores = new List<Perfil> { Cristobal, Jose, Darling };

    public class Perfil
    {
        public string Nombre { get; set; }
        public string Apellido { get; set; }
        public string Matricula { get; set; }
        public string Foto { get; set; }
        public string Telegram { get; set; }


        public Perfil() { }


        public Perfil(string nombre, string apellido, string matricula, string foto, string telegram)
        {
            Nombre = nombre;
            Apellido = apellido;
            Matricula = matricula;
            Foto = foto;
            Telegram = telegram;
        }


    }

}